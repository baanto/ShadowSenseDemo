                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Text="Confidence" Margin="0,0,150,0" VerticalAlignment="Center"/>
                                    <TextBox  Text="{Binding ShadowSenseSettings.TouchConfidence, Mode=TwoWay}" materialDesign:TransitionAssist.DisableTransitions="True" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" MinWidth="50" HorizontalContentAlignment="Right"/>
                                </Grid>
                            </TreeViewItem.Header>
                        </TreeViewItem>

                        <TreeViewItem Header="Liquid" IsExpanded="True" Foreground="{DynamicResource MaterialDesignToolTipBackground}">
