                                    <TextBox  Text="{Binding ShadowSenseSettings.IrFrequency, Mode=TwoWay}" materialDesign:TransitionAssist.DisableTransitions="True" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" MinWidth="50" HorizontalContentAlignment="Right"/>
                                </Grid>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Header="Filters" Foreground="{DynamicResource MaterialDesignToolTipBackground}" FontWeight="DemiBold">
                        <TreeViewItem Header="Motion" IsExpanded="True" Foreground="{DynamicResource MaterialDesignToolTipBackground}">
                            <TreeViewItem >
                                <TreeViewItem.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  Text="Filter Size" Margin="0,0,20,0" VerticalAlignment="Center"/>
