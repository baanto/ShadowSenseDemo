                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  Text="Mouse Pipe Enable" Margin="0,0,150,0" VerticalAlignment="Center"/>
                                        <TextBox  Text="{Binding ShadowSenseSettings.MousePipeEnable, Mode=TwoWay}" materialDesign:TransitionAssist.DisableTransitions="True" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" MinWidth="50" HorizontalContentAlignment="Right"/>
                                    </Grid>
                                </TreeViewItem.Header>
                            </TreeViewItem>
                            <TreeViewItem>
                                <TreeViewItem.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  Text="Mouse Data Enable" Margin="0,0,150,0" VerticalAlignment="Center"/>
                                        <TextBox  Text="{Binding ShadowSenseSettings.MouseDataEnable, Mode=TwoWay}" materialDesign:TransitionAssist.DisableTransitions="True" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" MinWidth="50" HorizontalContentAlignment="Right"/>
                                    </Grid>
                                </TreeViewItem.Header>
                            </TreeViewItem>
                            <TreeViewItem>
                                <TreeViewItem.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  Text="Stylus Pipe Enable" Margin="0,0,150,0" VerticalAlignment="Center"/>
                                        <TextBox  Text="{Binding ShadowSenseSettings.StylusPipeEnable, Mode=TwoWay}" materialDesign:TransitionAssist.DisableTransitions="True" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" MinWidth="50" HorizontalContentAlignment="Right"/>
                                    </Grid>
                                </TreeViewItem.Header>
                            </TreeViewItem>
                            <TreeViewItem>
                                <TreeViewItem.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  Text="Stylus Data Enable" Margin="0,0,150,0" VerticalAlignment="Center"/>
                                        <TextBox  Text="{Binding ShadowSenseSettings.StylusDataEnable, Mode=TwoWay}" materialDesign:TransitionAssist.DisableTransitions="True" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" MinWidth="50" HorizontalContentAlignment="Right"/>
                                    </Grid>
                                </TreeViewItem.Header>
                            </TreeViewItem>

                        </TreeViewItem>
                        <TreeViewItem >
                            <TreeViewItem.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
