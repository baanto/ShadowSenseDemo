                                        <TextBlock  Text="Water Shadow Minimum Area" Margin="0,0,150,0" VerticalAlignment="Center"/>
                                        <TextBox  Text="{Binding ShadowSenseSettings.WaterShadowMinimumArea, Mode=TwoWay}" materialDesign:TransitionAssist.DisableTransitions="True" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" MinWidth="50" HorizontalContentAlignment="Right"/>
                                    </Grid>
                                </TreeViewItem.Header>
                            </TreeViewItem>
                        </TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Header="Transforms" FontWeight="DemiBold" Foreground="{DynamicResource MaterialDesignToolTipBackground}">
                        <TreeViewItem Header="Apple Settings" IsExpanded="True" Foreground="{DynamicResource MaterialDesignToolTipBackground}">
                            <TreeViewItem >
                                <TreeViewItem.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  Text="Transform Enable" Margin="0,0,150,0" VerticalAlignment="Center"/>
                                        <TextBox  Text="{Binding ShadowSenseSettings.MacTransformEnable, Mode=TwoWay}" materialDesign:TransitionAssist.DisableTransitions="True" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" MinWidth="50" HorizontalContentAlignment="Right"/>
                                    </Grid>
                                </TreeViewItem.Header>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Screen Mask" IsExpanded="True" Foreground="{DynamicResource MaterialDesignToolTipBackground}">
                            <TreeViewItem >
                                <TreeViewItem.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
