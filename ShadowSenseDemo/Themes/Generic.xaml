<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:ShadowSenseDemo.Views"
                    xmlns:vms="clr-namespace:ShadowSenseDemo.ViewModels"
                    xmlns:local="clr-namespace:ShadowSenseDemo.Themes">

    <DataTemplate DataType="{x:Type vms:DeviceSelectViewModel}">
        <views:DeviceSelectView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vms:DrawViewModel}">
        <views:DrawView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vms:ConfigurationViewModel}">
        <views:ConfigurationView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vms:UpgradeViewModel}">
        <views:UpdateView />
    </DataTemplate>

</ResourceDictionary>